    <Shell:ApplicationBar x:Key="GlobalApplicationBar" IsVisible="False" IsMenuEnabled="True">
        <Shell:ApplicationBar.MenuItems>
            <Shell:ApplicationBarMenuItem x:Name="InfoMenuItem" Text="About" />
            <Shell:ApplicationBarMenuItem x:Name="HoleOddsMenuItem" Text="Hole Odds" />
            <Shell:ApplicationBarMenuItem x:Name="SettingsMenuItem" Text="Settings" />
        </Shell:ApplicationBar.MenuItems>
        <Shell:ApplicationBarIconButton x:Name="CalculaterAppIconButton" IconUri="Images/Icons/256/Blue.Calculator.png" Text="Main" />
        <Shell:ApplicationBarIconButton x:Name="HistoryAppIconButton" IconUri="Images/Icons/256/Blue.Folder.png" Text="History" />
        <Shell:ApplicationBarIconButton x:Name="StatisticsAppIconButton" IconUri="Images/Icons/256/Blue.Stats.png" Text="Stats" />
        <Shell:ApplicationBarIconButton x:Name="StartingHandsAppIconButton" IconUri="Images/Icons/256/Starting.Hands.png" Text="Starting Hands" />
    </Shell:ApplicationBar>

