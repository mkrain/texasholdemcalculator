				</Thumb>
			</Grid>
			<Grid x:Name="VerticalTemplate" Margin="{StaticResource PhoneVerticalMargin}">
				<Grid.RowDefinitions>
					<RowDefinition Height="*"/>
					<RowDefinition Height="0"/>
					<RowDefinition Height="Auto"/>
