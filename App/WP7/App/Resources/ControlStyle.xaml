								  IsTabStop="False" 
								  Template="{StaticResource PhoneSimpleRepeatButton}" Grid.Row="0"/>
				<RepeatButton x:Name="VerticalTrackLargeChangeIncreaseRepeatButton" 
								  IsTabStop="False" 
								  Template="{StaticResource PhoneSimpleRepeatButton}" Grid.Row="2"/>
				<Thumb x:Name="VerticalThumb" Height="1" Margin="0,-1,0,0" Grid.Row="1" 
